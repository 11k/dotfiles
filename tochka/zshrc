export PATH=$HOME/bin:/usr/local/bin:/opt/homebrew/bin:$HOME/.composer/vendor/bin:$PATH
export ZSH=$HOME/.oh-my-zsh

ZSH_THEME="sui"
DISABLE_AUTO_UPDATE="true"
DISABLE_AUTO_TITLE="true"
ZSH_CUSTOM=$HOME/.zsh

plugins=(ssh-agent)

source $ZSH/oh-my-zsh.sh

# User configuration
export EDITOR=nvim

# https://www.mediawiki.org/wiki/Continuous_integration/Phan#Running_Phan
export MW_INSTALL_PATH=/Users/jay/Programming/mediawiki

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

alias zshr="source ~/.zshrc"
alias ssh="TERM=xterm ssh"
alias vim="nvim"

# Prettify SOAP XML
# Assumes prettier and @prettier/plugin-xml are installed globally.
function psoap () {
    # Remove escaping from double quotes.
    sed -i "" 's/\\"/"/g' "$1"

    # https://github.com/prettier/plugin-xml
    prettier \
        --xml-whitespace-sensitivity ignore \
        --single-attribute-per-line \
        --print-width 9999 \
        --tab-width 4 \
        --write \
        "$1"
}
